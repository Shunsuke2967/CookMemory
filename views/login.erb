<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://unpkg.com/ress/dist/ress.min.css">
    <link rel="stylesheet" href="/style.css">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <title>CookRecipe_login</title>
  </head>
  <body>
    <div class="wrapper header">
      <h1 class="home-content"><a href= "/">CookRecipe</a></h1>
      <div class="nav-bar">
        <a href= "/">HOME</a>
        <a href= "/signup">Signup</a>
      </div>
    </div>
    <div class="wrapper">
      <h2>Login</h2>
      <div class="upmiss"><%= @upmiss if @upmiss %></div>

      <div class="signup-login">
        <form action="/login" method="post">
          <label for="input_name">名前 </label><br>
          <input id="input_name" type="text" name="name"><br>
          <label for="input_pass">パスワード </label><br>
          <input id="input_pass" type="password" name="password"><br>
          <label for="input_re_pass">パスワード確認用 </label><br>
          <input id="input_re_pass" type="password" name="confirmation"><br>
          <div class="signup-login-button"><button type="submit">login</button></div>
        </form>
      </div>
    </div>
  </body>
</html>